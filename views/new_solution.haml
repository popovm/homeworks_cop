%h3
  = "Решение на задача #{@problem.name}"
%form{action: "/problems/#{@problem.id}/solutions/create", method: 'post', id: "problem-form"}
  %div.inputBlock
    %label{:for => 'text'} Решение
    %textarea{name: "text", form:"problem-form"}
  %div.buttonSubmit
    %input{name: 'submit', value: "Качване", type: 'submit'}